{{#if addNewQuestion}}
  <h4>What is your question?</h4><br>
  <form>
    <div class="form-group">
      <label for="content">Question:</label>
      {{input value=content id="content"}}
    </div>
    <div class="form-group">
      <label for="author">Full name:</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="notes">Additional Notes:</label>
      {{input value=notes id="notes"}}
    </div>
    <button {{action 'saveQuestion'}}>Post Question</button>
  </form>
{{else}}
  <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
