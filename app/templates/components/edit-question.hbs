{{#if updateQuestion}}
  <div style="clear:both;">
    <form>
      <div style="text-align:left;" class="form-group">
        <label for="author">Full name (edit):</label><br>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Question (edit): </label><br>
        {{input value=content id="content" size="78"}}
      </div>
      <div class="form-group">
        <label for="notes">Additional Notes (edit):</label><br>
        {{input value=notes id="notes" size="78"}}
      </div>
      <button class="edit"{{action 'editQuestion' question}}>Update</button>
    </form>
  </div>
{{else}}
  <button class="edit"{{action 'editFormShow'}}>Edit Question</button>
{{/if}}
